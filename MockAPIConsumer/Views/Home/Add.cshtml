@model MockAPIConsumer.Models.Place

@{
    ViewBag.Title = "Add";
}

<h2>Add a Place</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>ID: </label>
        @Html.EditorFor(p => p.Id, null, new { @class = "form-control" })
    </div>
   <div class="form-group">
       <label>Name: </label>
       @Html.EditorFor(p => p.Name, null, new { @class="form-control"})
    </div>
    <div class="form-group">
        <label>Population: </label>
        @Html.EditorFor(p => p.Population, null, new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
}

